[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    */migrations/*,
    staticfiles,
    */static/*,
extend-ignore = E203, W503
per-file-ignores =
    # Ignore formatting issues in test files
    */tests.py:E501,E128,W293
    */test_*.py:E501,E128,W293
