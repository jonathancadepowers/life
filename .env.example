# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (for production, e.g., Heroku)
# Example: CSRF_TRUSTED_ORIGINS=https://your-app.herokuapp.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# Database (for production)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# WHOOP API Configuration
# Get credentials from: https://developer.whoop.com/
WHOOP_CLIENT_ID=your-whoop-client-id
WHOOP_CLIENT_SECRET=your-whoop-client-secret
WHOOP_REDIRECT_URI=http://localhost:8000/whoop/callback

# WHOOP OAuth Tokens (will be set after first authentication)
# These will be automatically updated by the app
WHOOP_ACCESS_TOKEN=
WHOOP_REFRESH_TOKEN=
WHOOP_TOKEN_EXPIRES_AT=

# WITHINGS API Configuration
# Get credentials from: https://developer.withings.com/
WITHINGS_CLIENT_ID=your-withings-client-id
WITHINGS_CLIENT_SECRET=your-withings-client-secret
WITHINGS_REDIRECT_URI=http://localhost:8000/withings/callback

# WITHINGS OAuth Tokens (will be set after first authentication)
# These will be automatically updated by the app
WITHINGS_ACCESS_TOKEN=
WITHINGS_REFRESH_TOKEN=
WITHINGS_TOKEN_EXPIRES_AT=

# TOGGL API Configuration
# Get API token from: https://track.toggl.com/profile (scroll to API Token section)
# Get workspace ID from: https://track.toggl.com/timer (in URL after /workspaces/)
TOGGL_API_TOKEN=your-toggl-api-token
TOGGL_WORKSPACE_ID=your-workspace-id

# CRONOMETER Configuration
# Your Cronometer account credentials
# Note: This integration is for personal use only (not for enterprise use)
CRONOMETER_USERNAME=your-email@example.com
CRONOMETER_PASSWORD=your-password
